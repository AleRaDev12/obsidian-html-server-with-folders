{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "allowJs": false,
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"],
  "watchOptions": {
    "watchDirectory": "usefsevents"
  },
  "buildOptions": {
    "incremental": true
  }
}
